void ST7735_Orientation(ScrOrientation_TypeDef orientation)
{
  ST7735_cmd(0x36); // Memory data access control:
  switch (orientation)
  {
    case scr_CW:
      OffSetX = 3;
      OffSetY = 2;
      ST7735_data(0xa8);
      break;
    case scr_CCW:
      OffSetX = 1;
      OffSetY = 2;
      ST7735_data(0x68);
      break;
    case scr_180:
      OffSetX = 2;
      OffSetY = 3;
      ST7735_data(0xc8);
      break;
    default:
      OffSetX = 2;
      OffSetY = 1;
      ST7735_data(0x08);
      break;
  }
}
